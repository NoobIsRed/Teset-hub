 local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
 local Window = OrionLib:MakeWindow({Name = "Chain", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

-- Values
_G.FullBright.Value = true

-- Function
function FullBrightChain()
	loadstring(game:HttpGet("https://pastebin.com/raw/06iG6YkU", true))()
end

-- Tabs
local Main = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

-- Toggles
Main:AddToggle({
	Name = "Full Bright",
	Default = false,
	Callback = function(Value)
		_G.FullBright == Value
		FullBrightChain()
	end    
})
